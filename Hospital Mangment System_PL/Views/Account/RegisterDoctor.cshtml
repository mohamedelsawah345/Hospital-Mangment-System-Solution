@using Hospital_Mangment_System_BLL.View_model.AuthenticationVM
@model RegisterVM
@{
    int x = 1;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register Doctor</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body style="background: linear-gradient(90deg, #13C5DD 0%, #55b2b4 50%);">

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg" style="max-width: 500px; width: 100%;">
            <div class="card-body p-4">
                <!-- Register Doctor Heading -->
                <h2 class="text-center text-primary mb-4">Register Doctor</h2>

                <!-- Registration Form -->
                <form method="post" action="@Url.Action("RegisterDoctor", "Account")" novalidate onsubmit="return validateForm()" enctype="multipart/form-data">
                    <!-- User Name Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="UserName" class="form-control" id="floatingUserName" placeholder="User Name" required>
                        <label for="floatingUserName">User Name</label>
                        <div class="invalid-feedback">Please enter your user name.</div>
                    </div>

                    <!-- Email Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Email" type="email" class="form-control" id="floatingEmail" placeholder="Email Address" required>
                        <label for="floatingEmail">Email</label>
                        <div class="invalid-feedback">Please enter a valid email address.</div>
                    </div>

                    <!-- Password Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" required minlength="6">
                        <label for="floatingPassword">Password</label>
                        <div class="invalid-feedback">Password must be at least 6 characters long.</div>
                    </div>

                    <!-- Phone Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Phone" type="tel" class="form-control" id="floatingPhone" placeholder="Phone Number" required pattern="\d{11}">
                        <label for="floatingPhone">Phone</label>
                        <div class="invalid-feedback">Please enter a valid 11-digit phone number.</div>
                    </div>
                    <div class="mb-3">
                        <label for="Image" class="form-label">Image</label>
                        <input asp-for=Image type="file" class="form-control" id="Image" placeholder="Enter Image">
                    </div>


                    <!-- Speciality Field -->
                    <div class="form-floating mb-3">
                        <input asp-for="Speciality" class="form-control" id="floatingSpeciality" placeholder="Speciality" required>
                        <label for="floatingSpeciality">Speciality</label>
                        <div class="invalid-feedback">Please enter your speciality.</div>
                    </div>

                    <!-- Department Dropdown -->
                    <!-- Department Dropdown -->
                    <div class="form-floating mb-3">
                        <select asp-for="DepartmentId" class="form-select" id="floatingDepartmentId" required>
                            <option value="" disabled selected>Choose Department</option>
                            <option value="1">Cardiology</option>
                            <option value="2">nesa</option>
                            <option value="3">Pediatrics</option>
                            <option value="4">Neurology</option>
                            <option value="5">Dermatology</option>
                            <option value="6">Ophthalmology</option>
                            <option value="7">Radiology</option>
                            <option value="8">Oncology</option>

@* 
                            @if (ViewBag.Departments != null)
                            {
                                foreach (var dept in ViewBag.Departments)
                                {
                                    <option value="@x">@dept.Dname</option> <!-- Assuming Dnum is the ID and Dname is the name -->
                                    x=x+1;
                                }
                            }
                            else
                            {
                                <option value="" disabled>No Departments Available</option>
                            } *@
                        </select>
                        <label for="floatingDepartmentId">Department</label>
                        <div class="invalid-feedback">Please select a department.</div>
                    </div>


                    <!-- Register Button -->
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </form>

                <!-- Divider -->
                <hr class="my-4">

                <!-- Already Have an Account Link -->
                <div class="text-center">
                    <p>Already have an account? <a href="@Url.Action("Login", "Account")" class="text-primary">Login</a></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JavaScript for Validation -->
    <script>
        function validateForm() {
            var form = document.querySelector('form');
            if (form.checkValidity() === false) {
                form.classList.add('was-validated');
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
