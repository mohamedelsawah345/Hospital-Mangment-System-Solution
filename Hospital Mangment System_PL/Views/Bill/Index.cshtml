@using Hospital_Mangment_System_BLL.View_model.BillVM
@model List<GetAllBillsVM>

<h2>Patients and Their Bills</h2>


@if (Model != null && Model.Count > 0){
       <table class="table">
           <thead>
               <tr>
                   <th>Patient Name</th>
                   <th>Amount</th>
                   <th>Date of Issue</th>
               </tr>
           </thead>
           <tbody>
               @foreach (var item in Model)
               {
                   <tr>
                       <td>@item.PatientId</td>
                       <td>@item.Amount</td>
                       <td>@item.DateOfIssue.ToString("yyyy-MM-dd")</td>
                   </tr>
               }
           </tbody>
    </table>
}
else
{
    <p>No patients or bills found.</p>
}
<a asp-action="Index" class="btn btn-secondary">Back to Home</a> 
